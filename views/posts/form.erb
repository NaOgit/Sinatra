<form action="/<%= @post[:id] %>" method="post">
  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a title">
  </div>
  <div>
    <label>Body</label>
    <textarea name="post_body" placeholder="The body of the text"></textarea>
  </div>
  <div>
    <input type="submit" value="Save Post">
  </div>
</form>
